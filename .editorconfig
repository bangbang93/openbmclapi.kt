root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 120
tab_width = 4
trim_trailing_whitespace = true

[*.{kt,kts}]
indent_size = 4
continuation_indent_size = 4
max_line_length = 140
ktlint_standard_no-wildcard-imports = disabled

[*.md]
trim_trailing_whitespace = false
